<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Large_title">
        <item name="android:textSize">@dimen/large_title</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/large_title_height</item>
    </style>

    <style name="title_1">
        <item name="android:textSize">@dimen/title_1</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineHeight">@dimen/title_1_height</item>
    </style>

    <style name="title_2">
        <item name="android:textSize">@dimen/title_2</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/title_2_height</item>
    </style>

    <style name="title_3">
        <item name="android:textSize">@dimen/title_3</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/title_3_height</item>
    </style>

    <style name="title_4">
        <item name="android:textSize">@dimen/title_4</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineHeight">@dimen/title_4_height</item>
    </style>

    <style name="caption_1">
        <item name="android:textSize">@dimen/caption_1</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/caption_1_height</item>
    </style>

    <style name="placeholder_text">
        <item name="android:textSize">@dimen/placeholder_text</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="button_text_1">
        <item name="android:textSize">@dimen/button_text_1</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/button_text_1_height</item>
    </style>

    <style name="button_text_2">
        <item name="android:textSize">@dimen/button_text_2</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/button_text_2_height</item>
    </style>

    <style name="element_text">
        <item name="android:textSize">@dimen/element_text</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:lineHeight">@dimen/element_text_height</item>
    </style>

    <style name="text_1">
        <item name="android:textSize">@dimen/text_1</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:lineHeight">@dimen/text_1_height</item>
    </style>

    <style name="price_text">
        <item name="android:textSize">@dimen/price_text</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/price_text_height</item>
    </style>

    <style name="AuthInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/override_transparent_color</item>
        <item name="boxBackgroundColor">@color/background_light_grey</item>
        <item name="hintTextColor">@color/text_grey</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="LoginButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/text_light_pink</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">@dimen/button_text_2</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/button_text_2_height</item>
    </style>

    <style name="MyButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="shapeAppearance">@style/AddButtonShape</item>
        <item name="android:backgroundTint">@color/element_pink</item>
    </style>

    <style name="AddButtonShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopLeft">8dp</item>
    </style>

    <style name="FilterButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/button_text_2</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:lineHeight">@dimen/button_text_2_height</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="DiscountBlock" parent="CardView">
        <item name="android:backgroundTint">@color/element_pink</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:height">16dp</item>
    </style>


</resources>